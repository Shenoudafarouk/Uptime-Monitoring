          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "example": {
        "name": "Shenouda Farouk",
        "email": "Shenoudafarouk22@yahoo.com",
        "password": "12345678"
      }
    },
    "verifyEmail": {
      "type": "object",
      "required": ["email", "code"],
      "properties": {
        "email": {
          "type": "string"
        },
        "code": {
          "type": "string"
        }
      },
      "example": {
        "email": "Shenoudafarouk22@yahoo.com",
        "code": "24931"
      }
    },
    "login": {
