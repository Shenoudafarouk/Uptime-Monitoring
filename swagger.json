      "type": "object",
      "required": ["website", "title", "interval"],
      "properties": {
        "website": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "interval": {
          "type": "number"
        }
      },
      "example": {
        "website": "https://www.youtube.com/",
        "title": "Youtube",
        "interval": 10
      }
    },
    "updateMonitor": {
      "type": "object",
      "required": ["id"],
      "properties": {
        "id": {
          "type": "string"
        },
        "updatedData": {
          "type": "object"
        }
      },
      "example": {
        "id": "613164076372440ceb2ebbbf",
        "updatedData": {
          "title": "Youtube music",
          "website": "https://www.youtube.com/abc",
          "interval": 0.8
        }
      }
    },
    "deleteMonitor": {
