      "required": ["email", "password"],
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "example": {
        "email": "Shenoudafarouk22@yahoo.com",
        "password": "12345678"
      }
    },
